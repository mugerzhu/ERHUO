.page-body {
    background-color: white;
    margin-bottom: 30rpx;
}

swiper {
    width: 100%;
    height: 400rpx;
}

.day-select {
    width: 100%;
   
}

.goods {
    display: flex;
    flex-direction: row;
    height: 300rpx;
    padding-left: 30rpx;
    padding-top: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid rgb(248, 239, 239); 
}

.goods-image {
    width: 180rpx;
    height: 280rpx;
    border-radius: 3rpx;
}

.goods-info {
    margin-left: 50rpx; 
}

.goods-info-1 {
    display: flex;
    flex-direction: column;
}

.goods-info-2 {
    display: flex;
    flex-direction: row;
    margin-top: 75rpx;
}

.goods-name {
  font-weight: 700;
}

.goods-author {
    color: rgba(173, 173, 173, 0.842);
    font-size: 25rpx;
    margin-top: 15rpx;
}

.goods-grade {
    font-size: 25rpx;
    margin-top: 15rpx;
}

.goods-price {
    color: rgba(173, 173, 173, 0.842);
    font-size: 25rpx;    
}

.goods-discount {
    font-size: 25rpx;
    color: red;
    background-color: rgb(255, 220, 220);
    text-align: center;
    height: 38rpx;
    width: 80rpx;
    margin-top: 10rpx;
    margin-left: 25rpx;
    margin-right: 130rpx;
    border-radius: 5rpx;
}

.goods-car {
    width: 40rpx;
    height: 40rpx;
    margin-top: 6rpx;
}
